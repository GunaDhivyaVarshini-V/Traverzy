extends ./layout

block styles
  link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
  link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")
  link(rel="stylesheet", href="/css/style.css")

block body
  .page-content
    .container.mt-4
      h2.mb-4 Add New Travel Package

      // Nav Tabs
      ul.nav.nav-tabs.mb-3(role="tablist")
        li.nav-item
          a.nav-link.active(href="#package", data-bs-toggle="tab", role="tab", aria-controls="package", aria-selected="true")
            i.bi.bi-box-seam.me-1
            | Package
        li.nav-item
          a.nav-link(href="#flights", data-bs-toggle="tab", role="tab", aria-controls="flights", aria-selected="false")
            i.bi.bi-airplane.me-1
            | Flights
        li.nav-item
          a.nav-link(href="#hotels", data-bs-toggle="tab", role="tab", aria-controls="hotels", aria-selected="false")
            i.bi.bi-building.me-1
            | Hotels
        li.nav-item
          a.nav-link(href="#activities", data-bs-toggle="tab", role="tab", aria-controls="activities", aria-selected="false")
            i.bi.bi-map.me-1
            | Activities
        li.nav-item
          a.nav-link(href="#transport", data-bs-toggle="tab", role="tab", aria-controls="transport", aria-selected="false")
            i.bi.bi-bus-front.me-1
            | Transport
        li.nav-item
          a.nav-link(href="#food", data-bs-toggle="tab", role="tab", aria-controls="food", aria-selected="false")
            i.bi.bi-egg-fried.me-1
            | Food

      // Form begins
      form#addPackageForm(action="/api/v1/package/upload", method="POST", enctype="multipart/form-data")
        .tab-content.mt-3
          .tab-pane.fade.show.active#package
            include ./includes/package-details

          .tab-pane.fade#flights
            include ./includes/flight-details

          .tab-pane.fade#hotels
            include ./includes/hotel-details

          .tab-pane.fade#activities
            include ./includes/activity-details

          .tab-pane.fade#transport
            include ./includes/transport-details

          .tab-pane.fade#food
            include ./includes/food-preferences

        // Submit Button
        .d-flex.justify-content-end.mt-4
          button.btn.btn-success(style="min-width: 10rem; margin-bottom:1rem" type="submit")
            i.bi.bi-check-lg.me-1
            | Submit Package
script
 src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
