extends ./layout

block styles
  link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
  link(rel="stylesheet", href="/css/style.css")
  link(rel="stylesheet", href="/css/admin.css")

block body
  .page-content.container
    h2.admin-title.mt-4.mb-4 Upload New Package

    // Form for uploading a package
    form#uploadPackageForm(action="/api/v1/package/upload", method="POST", enctype="multipart/form-data")
      .mb-3
        label(for="packageName", class="form-label") Package Name
        input#packageName(type="text", class="form-control", name="packageName", placeholder="Enter package name", required)
      
      .mb-3
        label(for="destination", class="form-label") Destination
        input#destination(type="text", class="form-control", name="destination", placeholder="Enter destination", required)
      
      .mb-3
        label(for="description", class="form-label") Description
        textarea#description(class="form-control", name="description", placeholder="Enter package description", rows="4", required)
      
      .mb-3
        label(for="price", class="form-label") Price
        input#price(type="number", class="form-control", name="price", placeholder="Enter package price", required)
      
      .mb-3
        label(for="guests", class="form-label") No. of Guests
        input#guests(type="number", class="form-control", name="guests", placeholder="Enter number of guests", required)
      
      .mb-3
        label(for="packageImage", class="form-label") Upload Package Image
        input#packageImage(type="file", class="form-control", name="packageImage", accept="image/*", required)
      
      button.btn.btn-primary(type="submit") Upload Package

    // Display messages (success/failure)
    .mt-4
      p#uploadStatus(style="color: green; display: none;") Package uploaded successfully!
      p#uploadError(style="color: red; display: none;") Error uploading package. Please try again.
