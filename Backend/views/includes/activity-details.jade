#activitiesContainer
  .activity-entry.border.p-3.mb-3.rounded.bg-light
    h5.mb-3.text-primary Activity 1
    .row.mb-2
      .col-md-6
        label Activity Name
        input.form-control(type="text", name="activities[0][activityName]", placeholder="e.g. Temple Visit")
      .col-md-6
        label Location
        input.form-control(type="text", name="activities[0][location]", placeholder="e.g. Bali")
    .row.mb-2
      .col-md-8
        label Description
        input.form-control(type="text", name="activities[0][description]", placeholder="e.g. Visit Uluwatu and other temples.")
      .col-md-4
        label Price ($)
        input.form-control(type="number", name="activities[0][price]")
    .row.mb-2
      .col-md-6
        label Activity Date & Time
        input.form-control(type="datetime-local", name="activities[0][activityDate]")

button.btn.btn-outline-primary(type="button", onclick="addActivity()") + Add Another Activity

script.
  let activityIndex = 1;
  function addActivity() {
    const container = document.getElementById("activitiesContainer");
    const entry = container.querySelector(".activity-entry").cloneNode(true);
    entry.querySelectorAll("input").forEach((input) => {
      const newName = input.name.replace(/\[\d+\]/, `[${activityIndex}]`);
      input.name = newName;
      input.value = "";
    });
    entry.querySelector("h5").innerText = `Activity ${activityIndex + 1}`;
    container.appendChild(entry);
    activityIndex++;
  }
