#hotelsContainer
  .hotel-entry.border.p-3.mb-3.rounded.bg-light
    h5.mb-3.text-primary Hotel 1
    .row.mb-2
      .col-md-6
        label Hotel Name
        input.form-control(type="text", name="hotels[0][hotelName]", placeholder="e.g. Ubud Paradise")
      .col-md-6
        label Location
        input.form-control(type="text", name="hotels[0][location]", placeholder="e.g. Ubud")
    .row.mb-2
      .col-md-6
        label Check-In Date
        input.form-control(type="datetime-local", name="hotels[0][checkInDate]")
      .col-md-6
        label Check-Out Date
        input.form-control(type="datetime-local", name="hotels[0][checkOutDate]")
    .row.mb-2
      .col-md-4
        label Room Type
        input.form-control(type="text", name="hotels[0][roomType]", placeholder="e.g. Deluxe")
      .col-md-4
        label Price Per Night ($)
        input.form-control(type="number", name="hotels[0][pricePerNight]")
      .col-md-4
        label Rating
        input.form-control(type="number", name="hotels[0][rating]", min="1", max="5")

button.btn.btn-outline-primary(type="button", onclick="addHotel()") + Add Another Hotel

script.
  let hotelIndex = 1;
  function addHotel() {
    const container = document.getElementById("hotelsContainer");
    const entry = container.querySelector(".hotel-entry").cloneNode(true);
    entry.querySelectorAll("input").forEach((input) => {
      const newName = input.name.replace(/\[\d+\]/, `[${hotelIndex}]`);
      input.name = newName;
      input.value = "";
    });
    entry.querySelector("h5").innerText = `Hotel ${hotelIndex + 1}`;
    container.appendChild(entry);
    hotelIndex++;
  }
