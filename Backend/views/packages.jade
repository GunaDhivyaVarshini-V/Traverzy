extends ./layout

block styles
  link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
  link(rel="stylesheet", href="/css/style.css")
  link(rel="stylesheet", href="/css/packages.css")

block body
 .page-content
  //- Filter bar
  .packages-wrapper

    //- Sidebar Filters
    aside.filter-sidebar
      h3 Filter by

      .filter-group
        h4 Category
        label
          input.filter-option(type="checkbox", value="beach")
          | Beach
        br
        label
          input.filter-option(type="checkbox", value="hill")
          | Hill Station
        br
        label
          input.filter-option(type="checkbox", value="cultural")
          | Cultural
        br
        label
          input.filter-option(type="checkbox", value="adventure")
          | Adventure
        br
        label
          input.filter-option(type="checkbox", value="pilgrimage")
          | Pilgrimage
        br

      .filter-group
        h4 Duration
        label
          input(type="radio", name="duration", value="1-3")
          | 1-3 Days
        br
        label
          input(type="radio", name="duration", value="4-7")
          | 4-7 Days
        br
        label
          input(type="radio", name="duration", value="8+")
          | 8+ Days

      .filter-group
        h4 Travel Type
        label
          input(type="checkbox", value="family")
          | Family
        br
        label
          input(type="checkbox", value="solo")
          | Solo
        br
        label
          input(type="checkbox", value="group")
          | Group
        br

      .filter-group
        h4 Price
        label
          input.price(type="radio", name="price", value="low")
          | Under ₹10,000
        br
        label
          input.price(type="radio", name="price", value="mid")
          | ₹10,000 - ₹30,000
        br
        label
          input.price(type="radio", name="price", value="high")
          | Above ₹30,000
        br

    //- Package Cards Section
    .packages-section
      .packages-header Explore Our Travel Packages
      #packagesContainer.packages-container
        //- Cards will be added here via JS

block scripts
  script(src="/js/packages.js")
